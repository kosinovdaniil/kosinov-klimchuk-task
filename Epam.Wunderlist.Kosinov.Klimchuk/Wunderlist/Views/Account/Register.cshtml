@model Wunderlist.ViewModels.UserRegisterModel

@{
    ViewBag.Title = "Регистрация";
}

@section Content {
    <h4 class="signup">Получите Wunderlist бесплатно</h4>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-register" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="field">
            <br />
            <img src="~/Content/user.png" alt="user" />
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Имя" } })
            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
        </div>

        <hr />

        <div class="field">
            <img src="~/Content/email.png" alt="Lock" />
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "email", placeholder = "Электронная почта" } })
            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
        </div>

        <hr />
        <div class="field">
            <img src="~/Content/lock.png" alt="Password" />
            @Html.PasswordFor(model => model.Password, new { placeholder = "Пароль" })
            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
        </div>

        <hr />

        <div>
            <input type="submit" value="Создать бесплатную учетную запись" class="btn" />
        </div>
    }

    <div id="link">
        Уже зарегистрированы?
        @Html.ActionLink("Вход", "LogOn", "Account")
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
